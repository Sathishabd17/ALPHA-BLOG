<h1 class="text-center mt-4"><%= @article.title %></h1>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    by <%= @article.user.username %>
                </div>
                <div class="card-body">
                    <div class="card-text text-left"><%= simple_format(@article.description) %></div>
                    <%= link_to 'Edit', edit_article_path(@article), class:"btn btn-info" %>
                    <%= link_to 'Danger', article_path(@article), method: :delete, data: {confirm: "Are you to delete?"}, class:"btn btn-danger" %>
                </div>
                <div class="card-footer text-muted">
                    Created <%= time_ago_in_words(@article.created_at) %> ago,
                    edited <%= time_ago_in_words(@article.updated_at) %> ago.
                </div>
            </div>
            <div class="text-center">
            <div class="mb-3">
                <%= link_to '[ Cancel and back to articles ]', articles_path, class: "text-info" %>
            </div>
            </div>
        </div>
    </div>
</div>
